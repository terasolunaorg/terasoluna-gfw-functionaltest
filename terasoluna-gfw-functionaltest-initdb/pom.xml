<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.terasoluna.gfw.functionaltest</groupId>
        <artifactId>terasoluna-gfw-functionaltest-parent</artifactId>
        <version>1.1.0-SNAPSHOT</version>
        <relativePath>../terasoluna-gfw-functionaltest/pom.xml</relativePath>
    </parent>
    <name>Terasoluna Global Framework - Functionality Test Application - DB Init</name>
    <description>DB initialization scripts of Functionality Test Application using Terasoluna Global Framework</description>
    <artifactId>terasoluna-gfw-functionaltest-initdb</artifactId>

    <properties>
        <postgresql.version>8.3-606.jdbc3</postgresql.version>
    </properties>

    <profiles>
        <profile>
            <id>local-postgres</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <db.encoding>UTF8</db.encoding>
                <db.basedir>src/main/sqls/postgres</db.basedir>
                <db.url>jdbc:postgresql://127.0.0.1:5432/terasoluna-gfw-functionaltest</db.url>
                <db.username>postgres</db.username>
                <db.password>P0stgres</db.password>
                <db.driver>org.postgresql.Driver</db.driver>
                <db.groupId>postgresql</db.groupId>
                <db.artifactId>postgresql</db.artifactId>
                <db.version>${postgresql.version}</db.version>
                <db.delimiterType>row</db.delimiterType>
            </properties>
        </profile>
        <profile>
            <id>oracle</id>
            <properties>
                <db.encoding>UTF8</db.encoding>
                <db.basedir>src/main/sqls/oracle</db.basedir>
                <db.url>jdbc:oracle:thin:@localhost:1521:teradb</db.url>
                <db.username>gfw</db.username>
                <db.password>gfw</db.password>
                <db.driver>oracle.jdbc.driver.OracleDriver</db.driver>
                <db.groupId>com.oracle</db.groupId>
                <db.artifactId>ojdbc6</db.artifactId>
                <db.version>${ojdbc6.version}</db.version>
                <db.delimiterType>row</db.delimiterType>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>sql-maven-plugin</artifactId>
                <version>1.5</version>
                <dependencies>
                    <dependency>
                        <groupId>${db.groupId}</groupId>
                        <artifactId>${db.artifactId}</artifactId>
                        <version>${db.version}</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <driver>${db.driver}</driver>
                    <url>${db.url}</url>
                    <username>${db.username}</username>
                    <password>${db.password}</password>
                    <encoding>${db.encoding}</encoding>
                    <autocommit>false</autocommit>
                    <delimiterType>${db.delimiterType}</delimiterType>
                    <onError>continue</onError>
                    <skip>false</skip>
                    <fileset>
                        <basedir>${db.basedir}</basedir>
                        <includes>
                            <include>*.sql</include>
                        </includes>
                    </fileset>
                    <orderFile>ascending</orderFile>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
